<%- include('partials/header') -%>
    <div class="main-container">

        <!-- Navigation Links -->
        <nav>
            <ul>
                <li><a href="/logout">Logout</a></li>
                <li><a href="/logs">Logs</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/entry">Entry</a></li>
            </ul>
        </nav>

        <main>

            <!-- Header -->
            <header class="text-center edit-title">
                Entry from <%= entry.createdOn %>
            </header>

            <!-- Form -->

                <form class="page p-5" action="/entry/<%= entry._id %>?_method=PUT" method="POST">
                    <div class="form-section">
                        <label for="goodThing">What's one good thing that happened today?</label>
                        <textarea readonly id="goodThing" name="goodThing" required><%= entry.goodThing %>
                        </textarea>
                    </div>
    
                    <div class="form-section">
                        <label for="positiveAccomplishment">What's one positive accomplishment you made today?</label>
                        <textarea readonly id="positiveAccomplishment" name="positiveAccomplishment" required><%= entry.positiveAccomplishment %>
                        </textarea>
                    </div>
    
                    <div class="form-section">
                        <label for="mood">How are you feeling today?</label>
                        <div class="grid-container">
                        <% moods.forEach((mood) => { %>
                            <label>
                                <input type="radio" name="mood" value="<%= mood %>"
                                    <% if (mood === entry.mood[0]) { %>
                                        checked
                                    <% } else { %>
                                        disabled
                                    <% } %>
                                >
                                <%= mood %>
                            </label>
                        <% }); %>
                        </div>
                    </div>
    
                    <div class="form-section">
                        <label for="madeYouSmile">What made you smile today?</label>
                        <textarea readonly id="madeYouSmile" name="madeYouSmile" required><%= entry.madeYouSmile %>
                        </textarea>
                    </div>
    
                    <div class="form-section">
                        <label for="lookingForwardTo">What are you looking forward to?</label>
                        <textarea readonly id="lookingForwardTo" name="lookingForwardTo" required><%= entry.lookingForwardTo %>
                        </textarea>
                    </div>
    
                    <div class="form-section">
                        <label for="proudOfYourself">What are you proud of yourself for today?</label>
                        <textarea readonly id="proudOfYourself" name="proudOfYourself" required><%= entry.proudOfYourself %>
                        </textarea>
                    </div>
    
                    <div class="form-section">
                        <label for="thoughtsReflections">Any other thoughts or reflections for today?</label>
                        <textarea readonly id="thoughtsReflections" name="thoughtsReflections" required><%= entry.thoughtsReflections %>
                        </textarea>
                    </div>
                </form>
   
        </main>

    </div>
<%- include('partials/footer') -%>