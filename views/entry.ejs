<%- include('partials/header') -%>
    <div class="container">

        <!-- Header -->
        <header class="text-center">
            <h1>Welcome to Gratitude Journal</h1>
            <p><%= greeting %></p>
        </header>

        <!-- Navigation Links -->
        <nav>
            <ul class="d-flex justify-content-center">
                <li class="mx-2"><a href="/logout">Logout</a></li>
                <li class="mx-2"><a href="/calendar">Calendar</a></li>
            </ul>
        </nav>

        <main>

            <!-- Form Header -->
            <h2>Today's Gratitude Journal Entry</h2>

            <!-- Alert Message -->
            <% if(messages.success) { %>
                <div class="alert alert-primary alert-dismissible fade show" role="alert">
                    <%= messages.success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>

            <!-- Form -->
            <form class="page p-5" action="/entry" method="POST">
                <div class="form-section">
                    <label for="goodThing">What's one good thing that happened today?</label>
                    <textarea id="goodThing" name="goodThing" required></textarea>
                </div>

                <div class="form-section">
                    <label for="positiveAccomplishment">What's one positive accomplishment you made today?</label>
                    <textarea id="positiveAccomplishment" name="positiveAccomplishment" required></textarea>
                </div>

                <div class="form-section">
                    <label for="mood">How are you feeling today?</label>
                    <div class="grid-container">
                    <% moods.forEach((mood) => { %>
                        <label><input type="radio" name="mood" value="<%= mood %>"> <%= mood %></label>
                    <% }); %>
                    </div>
                </div>

                <div class="form-section">
                    <label for="madeYouSmile">What made you smile today?</label>
                    <textarea id="madeYouSmile" name="madeYouSmile" required></textarea>
                </div>

                <div class="form-section">
                    <label for="lookingForwardTo">What are you looking forward to?</label>
                    <textarea id="lookingForwardTo" name="lookingForwardTo" required></textarea>
                </div>

                <div class="form-section">
                    <label for="proudOfYourself">What are you proud of yourself for today?</label>
                    <textarea id="proudOfYourself" name="proudOfYourself" required></textarea>
                </div>

                <div class="form-section">
                    <label for="thoughtsReflections">Any other thoughts or reflections for today?</label>
                    <textarea id="thoughtsReflections" name="thoughtsReflections" required></textarea>
                </div>

                <button class="submit-button btn btn-primary btn-lg" type="submit">Submit</button>
            </form>
        </main>

    </div>
<%- include('partials/footer') -%>