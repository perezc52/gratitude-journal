<%- include('partials/header') -%>
<div class="main-container">
    <nav>
        <ul>
            <li><a href="/logout">Logout</a></li>
            <li><a href="/logs">Logs</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/entry">Entry</a></li>
        </ul>
    </nav>
    <main class="logs">
            <h1>All your past entries</h1>
            <hr>
            <div class="logs-container">
                <% for(let i = 0; i < allUserEntries.length; i++) { %>
                <div class="log-row">
                    <h2><a class="view-entry-link" href="/entry/<%= allUserEntries[i]._id %>"><%= allUserEntries[i].createdOn %></a></h2>
                    <a class="btn btn-warning" href="/entry/edit/<%= allUserEntries[i]._id %>">Edit</a>
                    <a class="delete-entry btn btn-danger" data-entry-id="<%= allUserEntries[i]._id %>" href="/entry/<%= allUserEntries[i]._id %>">Delete</a>
                </div>
                <% } %>
            </div>
    </main>
</div>
<%- include('partials/footer') -%>